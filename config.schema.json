{
    "pluginAlias": "SmartLedStrip",
    "pluginType": "accessory",
    "headerDisplay": "[RPi](https://www.raspberrypi.org) GPIO based LED Strip plugin for [Homebridge](https://github.com/nfarina/homebridge).",
    "footerDisplay": "Raise [Issues](https://github.com/Timpan4/homebridge-gpio-rgb-ledstrip/issues) or submit [Pull Requests](https://github.com/Timpan4/homebridge-gpio-rgb-ledstrip/pulls) on [Project Page](https://github.com/Timpan4/homebridge-gpio-rgb-ledstrip).",
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true,
                "default": "SmartLedStrip",
                "description": "A unique name for the accessory. It will be used as the accessory name in HomeKit."
            },
            "rPin": {
                "title": "Red Pin",
                "type": "integer",
                "required": true,
                "default": 22,
                "description": "GPIO pin that is used to set red channel."
            },
            "gPin": {
                "title": "Green Pin",
                "type": "integer",
                "required": true,
                "default": 27,
                "description": "GPIO pin that is used to set green channel."
            },
            "bPin": {
                "title": "Blue Pin",
                "type": "integer",
                "required": true,
                "default": 17,
                "description": "GPIO pin that is used to set blue channel."
            },
            "ip": {
                "title": "IP of device",
                "type": "string",
                "required": true,
                "default": "http://192.168.50.5/update",
                "description": "IP for this device"
            }
        }
    }
}